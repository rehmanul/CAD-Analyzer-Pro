modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "geos", "glibcLocales", "gumbo", "harfbuzz", "jbig2dec", "libGL", "libGLU", "libjpeg_turbo", "libxcrypt", "mupdf", "openjpeg", "pkg-config", "swig", "xcbuild", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Streamlit App"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Streamlit App"
author = 44624609
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 8080 --server.address 0.0.0.0"

[[ports]]
localPort = 8080
externalPort = 8080
